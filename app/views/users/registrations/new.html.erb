<!-- BEGIN REGISTRATION FORM -->
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "register-form") do |f| %>
	<h3>New User Registration</h3>
	<p>
		Enter your details to begin:
	</p>
	<div class="form-group">
		<label class="control-label visible-ie8 visible-ie9">First Name</label>
		<div class="input-icon">
			<i class="fa fa-user"></i>
			<%= f.text_field :first_name, class: "form-control placeholder-no-fix", placeholder: "First Name", required: true %>
		</div>
	</div>
	<div class="form-group">
		<label class="control-label visible-ie8 visible-ie9">Last Name</label>
		<div class="input-icon">
			<i class="fa fa-user "></i>
			<%= f.text_field :last_name, class: "form-control placeholder-no-fix", placeholder: "Last Name", required: true %>
		</div>
	</div>
	<div class="form-group">
		<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
		<label class="control-label visible-ie8 visible-ie9">Email</label>
		<div class="input-icon">
			<i class="fa fa-envelope"></i>
			<%= f.email_field :email, class: "form-control placeholder-no-fix", placeholder: "Email", required: true %>
		</div>
	</div>
	<div class="form-group">
		<label class="control-label visible-ie8 visible-ie9">Password</label>
		<div class="input-icon">
			<i class="fa fa-lock"></i>
			<%= f.password_field :password, class: "form-control placeholder-no-fix", placeholder: "Password", required: true %>
		</div>
	</div>
	<div class="form-group">
		<label class="control-label visible-ie8 visible-ie9">Re-type Your Password</label>
		<div class="controls">
			<div class="input-icon">
				<i class="fa fa-check"></i>
				<%= f.password_field :password_confirmation, class: "form-control placeholder-no-fix", placeholder: "Retype Password", required: true %>
			</div>
		</div>
	</div>
	<div class="form-actions">
		<!--button id="register-back-btn" type="button" class="btn"-->
		<a href=<%= login_path %> class="btn default"> <i class="m-icon-swapleft"></i> Back </a>
		<button type="submit" id="register-submit-btn" class="btn green pull-right">
			Sign Up <i class="m-icon-swapright m-icon-white"></i>
		</button>
	</div>
<% end %>
<!-- END REGISTRATION FORM -->