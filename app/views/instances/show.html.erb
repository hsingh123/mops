<% content_for :breadcrumbs do %>
	<div id="breadcrumbs">
		<ul class="breadcrumb">
			<li><i class="icon-home"></i><a href="<%= root_path %>">Home</a><span class="divider"><i class="icon-angle-right"></i></span></li>
			<li><a href="<%= instances_path %>">My Instances</a><span class="divider"><i class="icon-angle-right"></i></span></li>
			<li class="active"><%= @instance.name %></li>
		</ul>
	</div>
<% end %>
<div class="space-6"></div>

<div class="row-fluid">
	<div class="span10 offset1">
		<div class="widget-box transparent invoice-box">
			<div class="widget-header widget-header-large">
				<h3 class="pull-left grey lighter position-relative grey">
					<i class="icon-tasks"></i>
					Instance Details
				</h3>
			</div>

			<div class="widget-body">
				<div class="widget-main padding-24">
					<div class="row-fluid">
						<div class="row-fluid">
							<div class="span6">
								<div class="row-fluid">
									<div class="span12 label label-large label-info arrowed-in arrowed-right"><b>Basic Details</b></div>
								</div>
								<div class="row-fluid">
									<ul class="unstyled spaced">
										<li><i class="icon-caret-right blue"></i> Name  :  <b class="red"><%= @instance.name %></b></li>
										<li><i class="icon-caret-right blue"></i> Instance ID  :  <b class="red"><%= @instance.ec2_instance_id %></b></li>
										<li><i class="icon-caret-right blue"></i> Launch Time  :  <b class="red"><%= @instance.launch_time %></b></li>
										<li><i class="icon-caret-right blue"></i> Cost  :  <b class="red"><%= @instance.cost %></b></li>
									</ul>
								</div>
							</div><!--/span-->
						
							<div class="span6">
								<div class="row-fluid">
									<div class="span12 label label-large label-success arrowed-in arrowed-right"><b>Amazon Details</b></div>
								</div>
								<div class="row-fluid">
									<ul class="unstyled spaced">
										<li><i class="icon-caret-right blue"></i> Instance Type  :  <b class="red"><%= @instance.instance_type %></b></li>
										<li><i class="icon-caret-right blue"></i> AMI ID  :  <b class="red"><%= @instance.ami %></b></li>
										<li><i class="icon-caret-right blue"></i> Status  :  <b class="red"><%= @instance.status %></b></li>
										<li><i class="icon-caret-right blue"></i> DNS Name  :  <b class="red"><%= @instance.dns_name %></b></li>
									</ul>
								</div>
							</div><!--/span-->
						</div><!--row-->
					</div>
				</div>
			</div>
		</div>
	</div>
</div>