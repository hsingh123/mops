<!-- BEGIN FORGOT PASSWORD FORM -->
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "forget-form" }) do |f| %>
	<h3>Forget Password ?</h3>
	<p>
		 Enter your e-mail address below to reset your password.
	</p>
	<div class="form-group">
		<div class="input-icon">
			<i class="fa fa-envelope"></i>
			<%= f.email_field :email, autofocus: true, class: "form-control placeholder-no-fix", placeholder: "Email", required: true %>
		</div>
	</div>

	<div class="form-actions">
		<a href=<%= login_path %> class="btn default" id="back-btn"> <i class="m-icon-swapleft m-icon"></i> Back </a>
		<button type="submit" class="btn green pull-right">
			Submit <i class="m-icon-swapright m-icon-white"></i>
		</button>
	</div>
<% end %>
<!-- END FORGOT PASSWORD FORM -->