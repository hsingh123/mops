<% content_for :breadcrumbs do %>
	<div id="breadcrumbs">
		<ul class="breadcrumb">
			<li><i class="icon-home"></i><a href="<%= root_path %>">Home</a><span class="divider"><i class="icon-angle-right"></i></span></li>
			<li><a href="<%= products_path %>">My Instances</a><span class="divider"><i class="icon-angle-right"></i></span></li>
			<li class="active"><%= @product.name %></li>
		</ul>
	</div>
<% end %>
<div class="space-6"></div>

<div class="row-fluid">
	<div class="span10 offset1">
		<div class="widget-box transparent invoice-box">
			<div class="widget-header widget-header-large">
				<h3 class="pull-left grey lighter position-relative grey">
					<i class="icon-tasks"></i>
					Product Details
				</h3>
			</div>

			<div class="widget-body">
				<div class="widget-main padding-24">
					<div class="row-fluid">
						<div class="row-fluid">
							<div class="span6">
								<div class="row-fluid">
									<div class="span12 label label-large label-info arrowed-in arrowed-right"><b>Basic Details</b></div>
								</div>
								<div class="row-fluid">
									<ul class="unstyled spaced">
										<li><i class="icon-caret-right blue"></i> Name  :  <b class="red"><%= @product.name %></b></li>
										<li><i class="icon-caret-right blue"></i> Instance ID  :  <b class="red"><%= @product.product_id %></b></li>
										<li><i class="icon-caret-right blue"></i> Launch Time  :  <b class="red"><%= @product.launch_time %></b></li>
										<li><i class="icon-caret-right blue"></i> Cost  :  <b class="red"><%= @product.cost.to_s %></b></li>
									</ul>
								</div>
							</div><!--/span-->
						
							<div class="span6">
								<div class="row-fluid">
									<div class="span12 label label-large label-success arrowed-in arrowed-right"><b>Amazon Details</b></div>
								</div>
								<div class="row-fluid">
									<ul class="unstyled spaced">
										<%if AppConfig.cloud[:name] == "AWS"%>
											<li><i class="icon-caret-right blue"></i> Instance Type  :  <b class="red"><%= @product.product_type %></b></li>
										<%elsif AppConfig.cloud[:name] == "DigitalOcean"%>
											<li><i class="icon-caret-right blue"></i> Size Type  :  <b class="red"><%= SizeType.find_by_size_id(@product.size_type).name %></b></li>
										<%end%>
										<li><i class="icon-caret-right blue"></i> AMI ID  :  <b class="red"><%= @product.image_id %></b></li>
										<li><i class="icon-caret-right blue"></i> Status  :  <b class="red"><%= @product.status %></b></li>
										<li><i class="icon-caret-right blue"></i> DNS Name  :  <b class="red"><%= @product.dns_name %></b></li>
									</ul>
								</div>
							</div><!--/span-->
						</div><!--row-->
					</div>
				</div>
			</div>
		</div>
	</div>
</div>