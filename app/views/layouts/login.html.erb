		<%= stylesheet_link_tag "style-metronic", media: "all" %>
		<%= stylesheet_link_tag "style", media: "all" %>
		<%= stylesheet_link_tag "style-responsive", media: "all" %>
		<%= stylesheet_link_tag "plugins", media: "all" %>
		<%= stylesheet_link_tag "light", media: "all" %>
		<%= stylesheet_link_tag "login", media: "all" %>
		<%= stylesheet_link_tag "custom", media: "all" %>
		<!-- END THEME STYLES -->
		<link rel="shortcut icon" href="favicon.ico"/>
	</head>

	<!-- BEGIN BODY -->
	<body class="login">

		<!-- BEGIN LOGO -->
		<div class="logo">
			<%= image_tag "logo-big.png", alt: "" %>
		</div>
		<!-- END LOGO -->

		<!-- BEGIN LOGIN -->
		<div class="content">
			<% flash.each do |type, message| %>
				<%= content_tag :div, class: flash_class(type) do %>
					<button type="button" class="close" data-dismiss="alert">&times;</button>
					<%= message %>
				<% end %>
			<% end %>
			<%= yield %>
		</div>
		<!-- END LOGIN -->

		<!-- BEGIN COPYRIGHT -->
		<div class="copyright">
			 2013 &copy; Metronic. Admin Dashboard Template.
		</div>
		<!-- END COPYRIGHT -->

